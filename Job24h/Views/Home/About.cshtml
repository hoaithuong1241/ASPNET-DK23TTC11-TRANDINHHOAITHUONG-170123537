@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold animate__animated animate__fadeInDown">About 24hdev</h1>
        <p class="lead animate__animated animate__fadeInUp animate__delay-1s">Empowering businesses through innovative technology solutions</p>
    </div>
</section>

<!-- Main Content -->
<div class="container">
    <!-- Company Story -->
    <div class="row align-items-center mb-5">
        <div class="col-lg-6 animate__animated animate__fadeInLeft">
            <div class="about-card shadow-lg p-4 rounded-3">
                <h2 class="section-title mb-4">
                    <i class="fas fa-lightbulb text-primary me-2"></i>Our Story
                </h2>
                <p class="lead text-muted">
                    Founded with a vision to transform how businesses leverage technology, 24hdev has been at the forefront of innovation since its inception.
                </p>
                <p>
                    We don't just build technology solutions – we craft digital experiences that drive measurable business impact. Our structured methodology ensures every solution aligns with your strategic objectives.
                </p>
            </div>
        </div>
        <div class="col-lg-6 animate__animated animate__fadeInRight">
            <div class="about-image-wrapper">
                <img src="~/Content/Static/ab-interview-ot.png" class="img-fluid rounded-3 shadow" alt="24hdev Team" />
            </div>
        </div>
    </div>

    <!-- Mission & Vision -->
    <div class="row mb-5">
        <div class="col-md-6 mb-4">
            <div class="feature-card h-100 p-4 rounded-3 shadow-sm">
                <div class="feature-icon mb-3">
                    <i class="fas fa-bullseye fa-3x text-primary"></i>
                </div>
                <h3 class="h4 mb-3">Our Mission</h3>
                <p class="text-muted">
                    To deliver technology solutions that create positive business impact through innovation, excellence, and strategic alignment.
                </p>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="feature-card h-100 p-4 rounded-3 shadow-sm">
                <div class="feature-icon mb-3">
                    <i class="fas fa-eye fa-3x text-success"></i>
                </div>
                <h3 class="h4 mb-3">Our Vision</h3>
                <p class="text-muted">
                    To be the leading technology partner that transforms businesses through cutting-edge solutions and long-term strategic partnerships.
                </p>
            </div>
        </div>
    </div>

    <!-- Core Values -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="section-title">Core Values</h2>
            <p class="lead text-muted">What drives us every day</p>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="value-card text-center p-3">
                <div class="value-icon mb-3">
                    <i class="fas fa-users fa-2x text-info"></i>
                </div>
                <h5>People First</h5>
                <p class="small text-muted">Our team is our greatest asset</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="value-card text-center p-3">
                <div class="value-icon mb-3">
                    <i class="fas fa-chart-line fa-2x text-warning"></i>
                </div>
                <h5>Business Impact</h5>
                <p class="small text-muted">Technology must drive results</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="value-card text-center p-3">
                <div class="value-icon mb-3">
                    <i class="fas fa-rocket fa-2x text-danger"></i>
                </div>
                <h5>Innovation</h5>
                <p class="small text-muted">Constantly pushing boundaries</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="value-card text-center p-3">
                <div class="value-icon mb-3">
                    <i class="fas fa-handshake fa-2x text-success"></i>
                </div>
                <h5>Partnership</h5>
                <p class="small text-muted">Long-term relationships</p>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="section-title">Our Expert Team</h2>
            <p class="lead text-muted">Tenured professionals with decades of experience</p>
        </div>
        <div class="col-12">
            <div class="team-card p-4 rounded-3 shadow-sm">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h4>Experience That Matters</h4>
                        <p class="text-muted">
                            Our core team consists of seasoned IT consultants who have been involved in large-scale technology projects since the early 1990s. This wealth of experience allows us to understand complex business challenges and deliver solutions that work.
                        </p>
                        <div class="row text-center mt-4">
                            <div class="col-4">
                                <h3 class="text-primary fw-bold">25+</h3>
                                <p class="small text-muted">Years Average Experience</p>
                            </div>
                            <div class="col-4">
                                <h3 class="text-success fw-bold">500+</h3>
                                <p class="small text-muted">Projects Delivered</p>
                            </div>
                            <div class="col-4">
                                <h3 class="text-info fw-bold">98%</h3>
                                <p class="small text-muted">Client Retention</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="~/Content/Static/team-placeholder.jpg" class="img-fluid rounded-3" alt="Our Team" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Innovation Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="innovation-card p-5 rounded-3 text-center text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h2 class="mb-4">Committed to Innovation</h2>
                <p class="lead mb-4">
                    We continuously invest in product development to address major pain points in software development and maintenance, keeping us at the cutting edge of technology.
                </p>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <i class="fas fa-cogs fa-3x mb-3"></i>
                        <h5>Process Innovation</h5>
                    </div>
                    <div class="col-md-4 mb-3">
                        <i class="fas fa-brain fa-3x mb-3"></i>
                        <h5>AI & Automation</h5>
                    </div>
                    <div class="col-md-4 mb-3">
                        <i class="fas fa-cloud fa-3x mb-3"></i>
                        <h5>Cloud Solutions</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="row">
        <div class="col-12 text-center">
            <div class="cta-card p-5 rounded-3 shadow-lg">
                <h2 class="mb-3">Ready to Transform Your Business?</h2>
                <p class="lead text-muted mb-4">
                    Let's discuss how our innovative solutions can drive exponential value for your organization.
                </p>
                <a href="@Url.Action("Contact", "Home")" class="btn btn-primary btn-lg px-5">
                    <i class="fas fa-paper-plane me-2"></i>Get In Touch
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    :root {
        --primary-color: #007bff;
        --secondary-color: #6c757d;
        --success-color: #28a745;
        --info-color: #17a2b8;
        --warning-color: #ffc107;
        --danger-color: #dc3545;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--info-color));
    }

    .section-title {
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 30px;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: var(--primary-color);
        border-radius: 2px;
    }

    .about-card, .feature-card, .value-card, .team-card, .cta-card {
        background: #fff;
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.1);
    }

    .about-card:hover, .feature-card:hover, .value-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
    }

    .value-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        background: rgba(0,123,255,0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .about-image-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
    }

    .about-image-wrapper img {
        transition: transform 0.5s ease;
    }

    .about-image-wrapper:hover img {
        transform: scale(1.05);
    }

    .innovation-card {
        position: relative;
        overflow: hidden;
    }

    .innovation-card::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: pulse 4s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 0.5; }
        50% { transform: scale(1.1); opacity: 0.3; }
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--info-color));
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,123,255,0.3);
    }

    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2.5rem;
        }
        
        .section-title::after {
            left: 0;
            transform: none;
        }
    }
</style>


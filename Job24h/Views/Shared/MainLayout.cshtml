<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/icon.png" type="image/x-icon">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/MyCss/site.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <div class="navbar-brand">
                <a href="/" class="d-flex align-items-center">
                    <img src="~/Content/Static/claysys-logo.png" alt="24hdev Logo" height="40">
                </a>
            </div>
            
            <div class="navbar-collapse justify-content-end">
                <ul class="navbar-nav align-items-center gap-3">
                    <li class="nav-item">
                        <a href="@Url.Action("Jobs","Home")" class="nav-link text-dark fw-medium">Jobs</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Login","Home")" class="btn btn-outline-primary px-4">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("JobSeekerRegister", "Home")" class="btn btn-primary px-4">Register</a>
                    </li>
                    <li class="nav-item">
                        <span class="text-muted">|</span>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("About","Home")" class="nav-link text-dark">About us</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("ContactUs","Home")" class="nav-link text-dark">Contact us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @{
        string message = TempData["Message"] as string;
        if (!String.IsNullOrEmpty(message))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong> @message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <script>
                function preventBack() {
                    window.history.forward();
                }

                setTimeout(preventBack, 0);

                window.onunload = function () {
                    null;
                };
            </script>
        }
    }

    <div class="container body-content">
        @RenderBody()
    </div>


    <footer class="row row-cols-5 py-5 my-5 border-top">
        <div class="col">
            <a href="/" class="d-flex align-items-center mb-3 link-dark text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><img width="40" height="32" src="~/Content/Static/claysys-logo.png"></svg>
            </a>
        </div>
        <div class="col">

        </div>
        <div class="col">
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a href="@Url.Action("About","Home")" class="nav-link p-0 text-muted">About us</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Careers</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Site map</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">FAQs</a></li>
            </ul>
        </div>
        <div class="col">
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Help center</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Reposrt issue</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Privacy & Policy</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Fraud alert</a></li>
            </ul>
        </div>
    </footer>
    <div class="copy-right" align="center">
        &copy; @DateTime.Now.Year 24hdev technologies
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
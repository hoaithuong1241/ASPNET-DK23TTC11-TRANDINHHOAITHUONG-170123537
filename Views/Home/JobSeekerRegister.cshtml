@{
    ViewBag.Title = "Job seeker registration";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-fluid py-5 bg-light">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-sm rounded-3 p-4 bg-white h-100">
                <div class="text-center mb-4">
                    <img src="~/Content/Static/white-boy.a0d2814a.png" class="img-fluid" alt="Registration Benefits" style="max-width: 200px;" />
                </div>
                <div class="benefits-list">
                    <h4 class="text-primary mb-3">Benefits</h4>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Build your profile and let recruiters find you</li>
                        <li class="mb-2"><i class="fas fa-envelope text-success me-2"></i>Get job postings delivered to your email</li>
                        <li class="mb-2"><i class="fas fa-chart-line text-success me-2"></i>Find a job and grow your career</li>
                    </ul>
                </div>
                <hr class="my-4">
                <div class="text-center">
                    <a href="@Url.Action("EmployerRegister","Home")" class="btn btn-outline-primary">Register as an Employer</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card shadow rounded-3 p-4 bg-white">
                <h3 class="text-primary mb-4">Job Seeker Registration</h3>
                <form action="/Home/JobSeekerRegister" method="post" id="fr" enctype="multipart/form-data" onsubmit="return validateRegisterForm()">
                    @Html.AntiForgeryToken()
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" name="FirstName" id="FirstName" class="form-control" placeholder="First name" onfocusout="validateFname(this)">
                                <label for="FirstName">First name</label>
                                <span id="error-fname" class="error-msg text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" name="LastName" id="LastName" class="form-control" placeholder="Last name" onfocusout="validateLname(this)">
                                <label for="LastName">Last name</label>
                                <span id="error-lname" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <select name="Experience" class="form-select" onfocusout="validateExperience()">
                                    <option selected disabled>Select experience</option>
                                    <option value="0">Fresher</option>
                                    <option value="1">1 Year</option>
                                    <option value="2">2 Years</option>
                                    <option value="3">3 Years</option>
                                    <option value="4">4 Years</option>
                                    <option value="5">5+ Years</option>
                                </select>
                                <label>Experience</label>
                                <span id="error-experience" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="date" name="BirthDate" id="DateOfBirth" class="form-control" onblur="validateDate(this)">
                                <label for="DateOfBirth">Date of birth</label>
                                <p id="age" class="text-muted small"></p>
                                <span id="error-date" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Gender</label>
                            <div class="d-flex gap-4">
                                <div class="form-check">
                                    <input type="radio" name="Gender" id="male" value="M" class="form-check-input" onchange="validateGender()">
                                    <label class="form-check-label" for="male">Male</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" name="Gender" id="female" value="F" class="form-check-input" onchange="validateGender()">
                                    <label class="form-check-label" for="female">Female</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" name="Gender" id="other" value="O" class="form-check-input" onchange="validateGender()">
                                    <label class="form-check-label" for="other">Other</label>
                                </div>
                            </div>
                            <span id="error-gender" class="error-msg text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="tel" name="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Phone number" onfocusout="validatePhone(this)">
                                <label for="PhoneNumber">Phone number</label>
                                <span id="error-phone" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" name="Email" id="Email" class="form-control" placeholder="Email address" onfocusout="validateEmail(this)">
                                <label for="Email">Email address</label>
                                <span id="error-email" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" name="Address" id="Address" class="form-control" placeholder="Address" onfocusout="validateAddress(this)">
                                <label for="Address">Address</label>
                                <span id="error-address" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <select name="State" id="state" class="form-select" onchange="updateCity()" onfocusout="validateStateCity()">
                                    <option selected disabled>Select a state</option>
                                </select>
                                <label for="state">State</label>
                                <span id="error-state" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <select name="City" id="city" class="form-select" onfocusout="validateStateCity()">
                                    <option selected disabled>Select a city</option>
                                </select>
                                <label for="city">City</label>
                                <span id="error-city" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" name="Username" id="username" class="form-control" placeholder="Username" oninput="validateUsername(this.value)">
                                <label for="username">Username</label>
                                <span id="error-username" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="password" name="Password" id="Password" class="form-control" placeholder="Password" 
                                       onkeyup="validateCpass(this)" onfocusout="validatePass(this)"
                                       title="Password must be at least 8 characters with uppercase, lowercase, number and special character">
                                <label for="Password">Password</label>
                                <span id="error-password" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="password" name="cpassword" id="ConfirmPassword" class="form-control" placeholder="Confirm password" onfocusout="validateCpass(this)">
                                <label for="ConfirmPassword">Confirm password</label>
                                <span id="error-cpassword" class="error-msg text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Profile picture</label>
                            <input type="file" name="imageUpload" id="imageUpload" class="form-control" 
                                   accept=".png, .jpg, .jpeg, .gif, .bmp, .webp" onchange="validateImage(this)"
                                   title="Supported formats: PNG, JPG, JPEG, BMP, WebP">
                            <span id="error-image" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Resume</label>
                            <input type="file" name="resumeUpload" id="resumeUpload" class="form-control" 
                                   accept=".pdf" onchange="validateResume(this)"
                                   title="Supported format: PDF">
                            <span id="error-resume" class="text-danger small"></span>
                        </div>

                        <div class="col-12 text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/MyScripts/main.js"></script>
